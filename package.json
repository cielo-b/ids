{
  "name": "bill-me-platform",
  "version": "1.0.0",
  "description": "SaaS platform for business entity management - Bill Me",
  "author": "ID Services Ltd",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "build:all": "nest build api-gateway && nest build auth-service && nest build user-service && nest build entity-service && nest build manager-service && nest build employee-service && nest build menu-service && nest build order-service && nest build payment-service && nest build receipt-service && nest build subscription-service && nest build notification-service && nest build audit-service && nest build report-service",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main.js",
    "start:gateway": "nest start api-gateway --watch",
    "start:auth": "nest start auth-service --watch",
    "start:user": "nest start user-service --watch",
    "start:entity": "nest start entity-service --watch",
    "start:manager": "nest start manager-service --watch",
    "start:employee": "nest start employee-service --watch",
    "start:menu": "nest start menu-service --watch",
    "start:order": "nest start order-service --watch",
    "start:payment": "nest start payment-service --watch",
    "start:receipt": "nest start receipt-service --watch",
    "start:subscription": "nest start subscription-service --watch",
    "start:notification": "nest start notification-service --watch",
    "start:audit": "nest start audit-service --watch",
    "start:report": "nest start report-service --watch",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:auth\" \"npm run start:user\" \"npm run start:entity\" \"npm run start:manager\" \"npm run start:employee\" \"npm run start:menu\" \"npm run start:order\" \"npm run start:payment\" \"npm run start:receipt\" \"npm run start:subscription\" \"npm run start:notification\" \"npm run start:audit\" \"npm run start:report\" --names \"GATEWAY,AUTH,USER,ENTITY,MANAGER,EMPLOYEE,MENU,ORDER,PAYMENT,RECEIPT,SUBSCRIPTION,NOTIFICATION,AUDIT,REPORT\" --prefix-colors \"blue,green,yellow,purple,magenta,cyan,white,gray,red,brightBlue,brightGreen,brightYellow,brightMagenta,brightCyan\"",
    "dev": "./scripts/start-all-with-env.sh",
    "dev:all": "npm run start:all",
    "test:system": "node test-system-flow.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "swagger:fetch": "node scripts/fetch-all-swagger.js",
    "swagger:fetch:bash": "./scripts/fetch-all-swagger.sh"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^5.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.4.20",
    "@types/xlsx": "0.0.36",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "csv-writer": "^1.6.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.0",
    "nodemailer": "^6.9.0",
    "otplib": "^12.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.0",
    "qrcode": "^1.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.0",
    "@types/passport-jwt": "^3.0.0",
    "@types/passport-local": "^1.0.0",
    "@types/pdfkit": "^0.12.0",
    "@types/qrcode": "^1.5.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
