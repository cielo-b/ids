# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@billme.com
SMTP_SECURE=false

# ============================================
# SMS Configuration
# ============================================
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com
SMS_FROM=BILLME

# ============================================
# Payment Gateway Configuration
# ============================================
# Paystack
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# Flutterwave
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key
FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key

# MTN Mobile Money
MTN_MOMO_API_KEY=your-mtn-momo-api-key
MTN_MOMO_API_USER=your-mtn-momo-api-user
MTN_MOMO_ENVIRONMENT=sandbox

# ============================================
# WebSocket Configuration
# ============================================
WEBSOCKET_PORT=3000
WEBSOCKET_PATH=/events

# ============================================
# Rate Limiting Configuration
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:4200
CORS_CREDENTIALS=true

# ============================================
# Service URLs (for inter-service communication)
# ============================================
# Use localhost when running services locally
# Use service names (e.g., user-service) when running in Docker/Kubernetes
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
ENTITY_SERVICE_URL=http://localhost:3003
