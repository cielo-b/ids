# ============================================
# Bill Me Platform - Environment Variables
# ============================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# ============================================
# Super Admin Configuration
# ============================================
# Secret key required to create super admin users
# Set this to a strong random string in production
SUPER_ADMIN_KEY=your-super-admin-secret-key-change-in-production

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6370

# ============================================
# OTP Configuration
# ============================================
OTP_EXPIRATION=300

# ============================================
# Service Ports
# ============================================
PORT=3000
GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
ENTITY_SERVICE_PORT=3003
SUBSCRIPTION_SERVICE_PORT=3004
MANAGER_SERVICE_PORT=3005
EMPLOYEE_SERVICE_PORT=3006
MENU_SERVICE_PORT=3007
ORDER_SERVICE_PORT=3008
PAYMENT_SERVICE_PORT=3009
RECEIPT_SERVICE_PORT=3010
NOTIFICATION_SERVICE_PORT=3011
AUDIT_SERVICE_PORT=3012
REPORT_SERVICE_PORT=3013

# ============================================
# Database Configuration - Auth Service
# ============================================
AUTH_POSTGRES_HOST=localhost
AUTH_POSTGRES_PORT=5433
AUTH_POSTGRES_USER=billme_auth
AUTH_POSTGRES_PASSWORD=billme_auth_pass
AUTH_POSTGRES_DB=billme_auth

